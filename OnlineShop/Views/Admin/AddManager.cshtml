@model OnlineShop.Models.Manager
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddManager</title>
    <link href="~/Content/CSS/ValidationErrorStyle.css" type="text/css" rel="stylesheet" />
</head>
<body>
   @using (Html.BeginForm("AddManager", "Admin", FormMethod.Post))
   {
    @Html.ValidationSummary(true)
    <div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <br />
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <br />
    </div>
    <div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <br />
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <br />
    </div>
    <div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <br />
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <br />
    </div>
    <br/>
    <br/>

    <input type="submit" value="Add"/>

    <hr/>

    @Html.ActionLink("Back","Room","Admin")

   }
</body>
</html>
