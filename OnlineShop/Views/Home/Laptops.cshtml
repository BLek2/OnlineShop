
@{
    ViewBag.Title = "Laptops";
    Layout = "~/Views/_Layout.cshtml";
}

@foreach(var b in ViewBag.laptops)
{
    <p>@using (Html.BeginForm("Laptop", "Home", FormMethod.Get)) { <input type="hidden" name="Id" value="@b.Id" > <input type="submit" value="@b.Title">} </p >
    <p><img src="@Url.Content(b.MainImagePath)" /></p>
    <p>@b.Description</p>
  

    <hr/>

}

