@model OnlineShop.Models.TemplateModels.Register
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="~/Content/CSS/Account/LoginAndRegisterCSS.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/CSS/ValidationErrorStyle.css" type="text/css" rel="stylesheet" />
</head>
<body>
   @using (Html.BeginForm("Register", "Account", FormMethod.Post))
   {
    @Html.ValidationSummary(true)

       <div>
       <div class="editor-label"  >
           @Html.LabelFor(model=>model.Name)
       </div>
        <br/>
       <div  class="editor-field"  >
           @Html.EditorFor(model=>model.Name)
           @Html.ValidationMessageFor(model=>model.Name)
       </div>
           <br />
       </div>

    <div>
        <div  class="editor-label"   >  
            @Html.LabelFor(model => model.Email)
        </div>
        <br />
        <div  class="editor-field"  >
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <br />
    </div>

    <div>
        <div  class="editor-label"  >
            @Html.LabelFor(model => model.Password)
        </div>
        <br />
        <div  class="editor-field" >
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <br />
    </div>
    <div>
        <div class="editor-label"  >
            @Html.LabelFor(model => model.RepeatPassword)
        </div>
        <br />
        <div  class="editor-field">
            @Html.EditorFor(model => model.RepeatPassword)
            @Html.ValidationMessageFor(model => model.RepeatPassword)
        </div>
        <br />
    </div>
    <div>
        <div  class="editor-label"  >
            @Html.LabelFor(model => model.SecreatCombination)
        </div>
        <br />
        <div class="editor-field" >
            @Html.EditorFor(model => model.SecreatCombination)
            @Html.ValidationMessageFor(model => model.SecreatCombination)
        </div>
        <br />
    </div>
    <br/>
    <input  id="submit"  type="submit" value="Create"/>
    <p>
        @Html.ActionLink("Back to Login", "Login", "Account")
    </p>
    <hr />
    <p id="LinkAbove">
        @Html.ActionLink("OnlineShop", "Index", "Home")
    </p>
   }
</body>
</html>
