@model OnlineShop.Models.TemporaryModels.Login
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/CSS/Account/LoginAndRegisterCSS.css" type="text/css"  rel="stylesheet"/>
    <link href="~/Content/CSS/ValidationErrorStyle.css" type="text/css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {

        @Html.ValidationSummary(true)
        <div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <br/>
            <div class="editor-field" >
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model=>model.Name)
            </div>
            <br />
        </div>
        <div>
            <div  class="editor-label" >
                @Html.LabelFor(model => model.Password)
            </div>
            <br />
            <div  class="editor-field" >
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <br />
        </div>
      
       <br/>
        <input  id="submit" type="submit" value="Sign in"/>
       <p>
           @Html.ActionLink("Create new manager", "Register","Account")
       </p>
       <hr/>
       <p id="LinkAbove" >
           @Html.ActionLink("OnlineShop", "Index", "Home")
       </p>
    }
  


</body>
</html>
